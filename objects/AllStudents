package objects;

import java.util.ArrayList;

public class AllStudents {
	private ArrayList<StudentInfo> students = new ArrayList<StudentInfo>();
	
	public void addStudent(String name, double homeworkAverage, double[] tests, double[] quizzes) {
		ArrayList<Double> testNums = new ArrayList<Double>();
		ArrayList<Double> quizNums = new ArrayList<Double>();
		
		students.add(new StudentInfo(name, homeworkAverage, testNums, quizNums));
	}
	
	public ArrayList<StudentInfo> getStudents() {
		return students;
	}
	
	private ArrayList<StudentInfo> gradeSort(ArrayList<StudentInfo> students) {
		int minIndex = 0;
		StudentInfo min = new StudentInfo();
		for(int i = 0; i < students.size(); i++){
			minIndex = i;
			min = students[i].getFinalAverage();
			for(int j = i + 1; j < students.size(); j++){
				if(students[j].getFinalAverage() < students[min].getFinalAverage()){
					minIndex = j;
					min = students[j];
				}
			}
			students[minIndex] = students[i];
			students[i] = min;
		}
	}
	
	private void nameSort() {
		
	}
}
